{# templates/pratique/add.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}add practice{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2>Add practice</h2>

{{ form_start(form) }}
    {{ form_label(form.sport) }}
    {{ form_widget(form.sport) }}
    
    {{ form_label(form.new_sport) }}
    {{ form_widget(form.new_sport) }}
    
    {{ form_label(form.niveau) }}
    {{ form_widget(form.niveau) }}
    
{{ form_end(form) }}
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
      var sportSelect = document.getElementById('pratique_sport');
      var newSportInput = document.getElementById('pratique_new_sport');
    
      // Hide new sport input by default
      newSportInput.style.display = 'none';
    
      // Event listener to toggle new sport input
      sportSelect.addEventListener('change', function() {
        if(sportSelect.value === '') { // Assuming an empty value is used for 'Choose a sport'
          newSportInput.style.display = 'block';
        } else {
          newSportInput.style.display = 'none';
        }
      });
    });
    </script>
    {% endblock %}